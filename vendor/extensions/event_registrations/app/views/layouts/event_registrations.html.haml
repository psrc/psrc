!!! XML
!!! Strict
%html{ :xmlns => "http://www.w3.org/1999/xhtml", :lang => "en" }
  %head
    %meta{ 'http-equiv' => "Content-Type", :content => "text/html; charset=utf-8" }
    %meta{ 'http-equiv' => "Content-Language", :content => "en" }
    %meta{ :name => "keywords", :content => "Prosperity Partnership, Events, Registration" }
    %meta{ :name => "description", :content => "Prosperity Partnership Events Registration" }
    %meta{ :name => "author", :content => "FixieConsulting.com" }
    %meta{ :name => "robots", :content => "all, follow" }
    %meta{ :name => "googlebot", :content => "index, follow, snippet, archive" }

    %link{ :rel => "shortcut icon", :href => "/favicon.ico" }
    %link{ :rel => "icon", :href=> "/favicon.ico" }

    = javascript_include_tag 'prototype', 'effects', 'application', :cache => "cache/all"
    = stylesheet_link_tag 'yui', 'base', 'screen', 'forms', 'util', :cache => "cache/all"

    = yield(:head)

    /[if lte IE 7]
      = stylesheet_link_tag 'ie'
    /[if lt IE 7]
      = stylesheet_link_tag 'ie6'

    %title
      = @event.name ||= "Puget Sound Regional Council"
  %body
    #custom-doc
      #yui-main
        - unless @progress_step.blank?
          %h1.title== #{@event.name} Registration
          %p.quiet== #{ date_span(@event) } / #{ @event.location }
          - if current_page?(event_path(@event))
            = @event.description
          - else
            #progress{:class => "step-#{@progress_step}"}
              %h4== Step #{@progress_step} of 5
          #event-registration
            = flash_messages
            = yield
    #ft
      Prosperity Partnership
    =# render :partial => "shared/analytics"
