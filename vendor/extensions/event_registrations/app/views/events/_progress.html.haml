- unless current_page?(event_path(@event))
  %ol#progress

    - unless @event.attendee_same_as_contact?
      = progress_step "Attendee Information"

    = progress_step "Contact Information"

    - if @event_option.has_menu?
      = progress_step "Menu"

    - if @event_option.payment_required?
      = progress_step "Payment Type"
      = progress_step "Payment"
      = progress_step "Confirmation"

    - else
      = progress_step "Confirmation"
