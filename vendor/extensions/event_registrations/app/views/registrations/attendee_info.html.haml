%h2.title= "Who will be attending this event?"
- form_for :set, :url => attendee_info_path, :builder => ::WebSgFormBuilder do |f|
  %fieldset
    - if @number_of_attendees > 1
      = f.text_field :table_name, :class => "focus title", :label => "Table Name", :hint => "(eg. Your company or organization name)"
    - counter = 0
    - @set.each do |@person|
      - fields_for :person, :builder => ::WebSgFormBuilder do |a|
        %div{:class => "attendee clear #{cycle(:odd,:even)}"}
          - unless @number_of_attendees == 1
            %h4== Attendee #{ counter + 1 }
          .field
            = a.text_field :name, :label => "Name", :class => "focus", :index => counter
          .field
            = a.text_field :email, :label => "E-Mail", :index => counter
          .field.vegetarian
            = a.check_box :vegetarian, :label => "Vegetarian?", :index => counter
      - counter += 1
  
  %p
    = submit_tag "Continue"
    == or #{ link_to "back to registration options", event_path(@event) }
