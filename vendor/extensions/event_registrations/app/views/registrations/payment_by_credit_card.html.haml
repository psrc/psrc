#payment
  %h2 Credit Card Payment
  - form_for :card, :url => payment_by_credit_card_path, :builder => ::WebSgFormBuilder do |f|
    - f.fieldset do
      = f.text_field :number, :label => "Credit Card Number", :hint => "(no dashes or spaces needed)", :class => "title focus", :maxlength => 16

      %dt
        %label Expiration Date
      %dd
        = f.select :month, [["Jan", 1], ["Feb", 2], ["March", 3]], {}
        = f.select :year,  [["2008", 2008], ["2009", 2009], ["2010", 2010]], {}

      = debug params
      = f.text_field :first_name, :label => "First Name", :hint => "Exactly as it appears on card"
      = f.text_field :last_name, :label => "Last name", :hint => "Exactly as it appears on card"
      = f.text_field :verification_value, :label => "Card Verification Number", :hint => "(found on back of card)"


    = f.submit "Purchase"
    or 
    = link_to "back to payment type", payment_type_path(@event, @event_option)
