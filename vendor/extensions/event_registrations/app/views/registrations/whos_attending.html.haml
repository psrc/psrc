%h2.title= "Who is attending this event?"
- form_for :attendee, :url => registration_contact_path, :builder => ::WebSgFormBuilder do |f|
  - unless @event_option.max_number_of_attendees == 1
    #table= f.text_field :table_name, :label => "Table Name", :class => "focus title", :hint => "e.g. Your Company Name/Organization"
    %h3.title== Who will sit at this table? (up to #{ @event_option.max_number_of_attendees })
  
  - f.fieldset do
    - counter = 0
    - @event_option.max_number_of_attendees.times do 
      %div{:class => "attendee clear #{cycle(:odd,:even)}"}
        - unless @event_option.max_number_of_attendees == 1
          %h4== Attendee #{ counter += 1 }
        .field
          = f.text_field :first_name, :label => "First Name", :class => "focus"
        .field
          = f.text_field :last_name, :label => "Last Name"
        .field
          = f.text_field :email, :label => "E-Mail"
        .field.vegetarian
          = f.check_box :vegetarian, :label => "Vegetarian?"
  
  %p
    = f.submit "Continue"
    == or #{ link_to "back to registration options", start_registration_path(@event) }