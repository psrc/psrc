- @logged_out = true

- content_for :meta do
  %style{:type=>"text/css"}
    :sass
      #content
        text-align: center
        #login
          background-color: #f5f1e2
          border: 5px solid #efead3
          text-align: left
          margin: 2em
          margin-left: auto
          margin-right: auto
          padding-left: 20px
          width: 23.5em
          h1
            font-size: 140%    
            margin: 0
            margin-top: 18px
            margin-bottom: 18px
          label
            float: left
            clear: left
            margin-top: 4px
            width: 6em
          input.textbox
            font-size: 100%
            width: 16em
          .buttons
            margin-top: 15px
            margin-bottom: 20px

#login
  %h1 Please Login
  
  %form{:method=>"post", :action=>"/admin/pages/"}
    %p
      %label{:for=>"user_login"} Username
      %input.textbox{:name=>"user[login]", :id=>"user_login", :type=>"text", :value=>"", :maxlength=>"40", :size=>"40"}/
    %p
      %label{:for=>"user_password"} Password
      %input.textbox{:name=>"user[password]", :id=>"user_password", :type=>"password", :value=>"", :maxlength=>"40", :size=>"40"}/
    %p.buttons
      %input.button{:type=>"submit", :value=>"Login"}/
  
  %script{:type=>"text/javascript"}
    :plain
      // <![CDATA[
        Field.activate('user_login');
      // ]]>