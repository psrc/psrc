    %tr.node.level-1
      %td.layout
        %img{:title=>"", :src=>"/admin/images/layout.png", :alt=>"layout-icon" }/
        %a{:href=>"/admin/layouts/2/edit" }
          Stylesheet
      %td.remove
        %a{:href=>"/admin/layouts/2/remove" }
          %img{:src=>"/admin/images/remove.png", :alt=>"Remove Layout" }/
    %tr.node.level-1
      %td.layout
        %img{:title=>"", :src=>"/admin/images/layout.png", :alt=>"layout-icon" }/
        %a{:href=>"/admin/layouts/3/edit" }
