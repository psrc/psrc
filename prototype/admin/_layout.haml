!!!
%html
  %head
    %meta{"http-equiv"=>"Content-type", :content=>"text/html; charset=utf-8"}/
    %title= @title || "Radiant CMS - Publishing for Small Teams"
    %link{:href=>"/admin/stylesheets/main.css", :media=>"screen", :rel=>"stylesheet", :type=>"text/css"}/
    %script{:src=>"/admin/javascripts/prototype.js", :type=>"text/javascript"}
    %script{:src=>"/admin/javascripts/string.js", :type=>"text/javascript"}
    %script{:src=>"/admin/javascripts/effects.js", :type=>"text/javascript"}
    %script{:src=>"/admin/javascripts/tabcontrol.js", :type=>"text/javascript"}
    %script{:src=>"/admin/javascripts/ruledtable.js", :type=>"text/javascript"}
    %script{:src=>"/admin/javascripts/admin.js", :type=>"text/javascript"}
    %script{:src=>"/admin/javascripts/sitemap.js", :type=>"text/javascript"}
    <!--[if lt IE 7]>
    %script{:type=>"text/javascript", :src=>"/admin/javascripts/pngfix.js"}
    <![endif]-->
    = yield :meta
  %body
    #page
      #header
        #site-title
          %a{:href=>"/admin/"} Radiant CMS
        #site-subtitle
          Publishing for Small Teams 
        - unless @logged_out
          #navigation
            - if @selected == :pages
              %strong
                %a{:href=>"/admin/pages/"} Pages
            - else
              %a{:href=>"/admin/pages/"} Pages
            %span.separator=" | "
            - if @selected == :snippets
              %strong
                %a{:href=>"/admin/snippets/"} Snippets
            - else
              %a{:href=>"/admin/snippets/"} Snippets
            %span.separator=" | "
            - if @selected == :layouts
              %strong
                %a{:href=>"/admin/layouts/"} Layouts
            - else
              %a{:href=>"/admin/layouts/"} Layouts
      %hr{:class=>"hidden"}/
      #main
        #content
          = yield
      %hr{:class=>"hidden"}/
      #footer
        %p This site was made with Ruby and is powered by <a href="http://radiantcms.org">Radiant CMS</a> version 0.6.5.
        %p#site-links
          - unless @logged_out
            %a{:href=>"/admin/users/"} Users
            %span.separator=" | "
            %a{:href=>"/admin/extensions/"} Extensions
            %span.separator=" | "
            %a{:href=>"/admin/logout/"} Log Out
            %span.separator=" | "
          %a{:href=>"/"}
            %img{:src=>"/admin/images/view-site.gif", :alt=>"View Site", :title=>""}/